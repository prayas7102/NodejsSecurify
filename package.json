  "main": "./dist/NodeJsSecurify.js",
  "types": "./dist/NodeJsSecurify.d.ts",
  "keywords": [
    "NodeJs",
    "TypeScript",
    "Input Validation",
    "Dangerous Functions",
    "DOS Attack",
    "ReGex DOS Attack",
    "Brute Force Attack",
    "OWASP",
    "CallBack Hell",
    "XSS Attack",
    "Insecure Security Headers",
    "Unsafe npm packages",
